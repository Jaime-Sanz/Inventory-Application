        <h1>Add Your Game Here!</h1>
    </div>
    <div id="form-container">
        <form action="/create" method="POST">
            <label for="vg_name" class="form-spacing">Enter Video Game Name:</label>
            <input type="text" name="vg_name" required maxlength="255" class="form-spacing">
            <label for="vg_description" class="form-spacing">Enter Video Game Description:</label>
            <input type="text" name="vg_description" required maxlength="500" class="form-spacing">
            <label for="vg_rating" class="form-spacing">Enter Video Game Rating:</label>
            <select name="vg_rating" class="form-spacing">
                <option value="E">E</option>
                <option value="T">T</option>
                <option value="M">M</option>
            </select>
            <label for="vg_price" class="form-spacing">Enter Video Game Price $:</label>
            <input type="number" name="vg_price" required placeholder="00.00" step="any" class="form-spacing">
            <label for="vg_stock" class="form-spacing">Enter How Many Games You Will Be Adding:</label>
            <input type="number" name="vg_stock" required min="1" max="99" placeholder="0" class="form-spacing">
            <button type="submit" class="form-spacing">Submit Your Game</button>
        </form>
    </div>
